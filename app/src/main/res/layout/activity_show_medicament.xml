<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowMedicamentActivity">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/medicine"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="medicina"
                    android:id="@+id/medicamentName"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textSize="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRAMOS: "
                    android:textStyle="bold"
                    android:textColor="#E38112"
                    android:layout_gravity="center"
                    android:textSize="35dp"/>

                <TextView
                    android:id="@+id/grams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="gramos"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIA: "
                    android:textStyle="bold"
                    android:textColor="#E38112"
                    android:layout_gravity="center"
                    android:textSize="35dp"/>

                <TextView
                    android:id="@+id/viaT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="via"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOMAR POR: "
                    android:textStyle="bold"
                    android:textColor="#E38112"
                    android:layout_gravity="center"
                    android:textSize="35dp"/>

                <TextView
                    android:id="@+id/dias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="dias"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CADA: "
                    android:textStyle="bold"
                    android:textColor="#E38112"
                    android:layout_gravity="center"
                    android:textSize="40dp"/>

                <TextView
                    android:id="@+id/horas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="horas"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LA CANTIDAD DE: "
                    android:textStyle="bold"
                    android:textColor="#E38112"
                    android:layout_gravity="center"
                    android:textSize="35dp"/>

                <TextView
                    android:id="@+id/cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="cantidad"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnMuted"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/muted"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silenciar alarma"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>