<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity"
    android:background="#E83E14">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E83E14"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="8dp"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Nombre de usuario"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="50dp"
        android:background="#fff"
        android:backgroundTint="#fff"
        android:layout_marginBottom="-50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:columnCount="2">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/contacts"
                        android:id="@+id/contactos"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:text="Contactos"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/recipe"
                        android:id="@+id/recetas"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:text="Recetas"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/medicine"
                        android:id="@+id/medicaments"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:text="Medicamentos"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/alarmico"
                        android:id="@+id/alarmas"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:text="Alarmas"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/follow"
                        android:id="@+id/seguimiento"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:text="Seguimiento"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/calendar"
                        android:id="@+id/calendario"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:text="Calendario"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </LinearLayout>

            </GridLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>